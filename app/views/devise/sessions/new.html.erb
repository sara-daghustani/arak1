
<section class="service-sec mt-5">
  <div class="text-center mx-auto mt-5">
    <div class="card border-light mb-3 mx-auto text-right" >
      <div class="card-body">
         <h2 class="card-title text-center"> تسجيل الدخول</h2>

        <section class="service-sec">
          <div class=" text-center mx-auto ">
          
      
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="field">

           <label for="Email"> البريد الالكتروني</label> <br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <div class="field">
            <label for="password">كلمة المرور</label> <br />
              <%= f.password_field :password, autocomplete: "current-password" %>
          </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
              <label for="remember_me">تذكرني</label>
                <%= f.check_box :remember_me %>
              
              </div>
            <% end %>

          <div class="actions mb-2">
            <%= f.submit "تسجيل الدخول",class:"btn btn-light" %><br><br>
          </div>
        <% end %>

<%= devise_error_messages! %>
    <% flash.each do |key, value| %>
       <div class="flash <%= key %>"><%= value %></div>
<% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>

